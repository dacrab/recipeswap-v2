---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { db } from '../db';
import { recipes } from '../db/schema';
import { desc, ilike, or } from 'drizzle-orm';

const search = Astro.url.searchParams.get('q') || '';

// Optimized data fetching
let allRecipes;
if (search) {
    allRecipes = await db.select().from(recipes)
        .where(
            or(
                ilike(recipes.title, `%${search}%`),
                ilike(recipes.description, `%${search}%`)
            )
        )
        .orderBy(desc(recipes.createdAt));
} else {
    allRecipes = await db.select().from(recipes).orderBy(desc(recipes.createdAt)).limit(20);
}
---

<Layout>
    <header class="fixed top-0 w-full z-50 glass">
        <div class="wrapper h-16 flex items-center justify-between">
            <a href="/" class="flex items-center gap-2 group">
                <span class="font-serif text-2xl font-bold tracking-tight group-hover:text-brand-primary transition-colors">RecipeSwap.</span>
            </a>
            
            <nav class="flex items-center gap-6">
                {Astro.locals.user ? (
                    <a href="/dashboard" class="nav-link flex items-center gap-2">
                        <span class="w-2 h-2 rounded-full bg-green-500"></span>
                        {Astro.locals.user.name}
                    </a>
                ) : (
                    <a href="/login" class="nav-link hidden md:block">Sign In</a>
                )}
                <a href="/dashboard/create" class="btn-primary">
                    Submit Recipe
                </a>
            </nav>
        </div>
    </header>

    <main class="pt-24 pb-20 min-h-screen">
        <!-- Hero Section -->
        <section class="wrapper py-16 md:py-24 text-center">
            <h1 class="display-heading mb-6 animate-fade-in-up">
                Taste the world, <br />
                <span class="text-brand-primary italic">one plate at a time.</span>
            </h1>
            <p class="prose-text text-lg md:text-xl max-w-2xl mx-auto mb-10">
                Discover curated recipes from home cooks around the globe. Join our community to share your culinary secrets.
            </p>
            
            <form action="/" method="get" class="max-w-lg mx-auto relative group">
                <div class="relative">
                    <input 
                        type="text" 
                        name="q" 
                        placeholder="Search for 'Avocado Toast'..." 
                        value={search}
                        class="input-field pl-12"
                    />
                    <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 group-focus-within:text-brand-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                    </div>
                </div>
            </form>

            {search && (
                <div class="mt-6 flex items-center justify-center gap-2 animate-fade-in">
                    <p class="text-gray-600">Results for <span class="font-bold text-brand-text">"{search}"</span></p>
                    <a href="/" class="text-sm text-brand-primary font-medium hover:underline flex items-center gap-1">
                        &times; Clear filter
                    </a>
                </div>
            )}
        </section>

        <!-- Content Grid -->
        <section class="wrapper">
            <div class="flex items-center justify-between mb-8 border-b border-gray-100 pb-4">
                <h2 class="section-heading mb-0">{search ? 'Search Results' : 'Fresh from the Kitchen'}</h2>
                <span class="text-sm text-gray-500 font-medium">{allRecipes.length} recipes found</span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {allRecipes.map((recipe) => (
                    <article>
                        <a href={`/recipe/${recipe.slug}`} class="recipe-card group h-full">
                            <div class="recipe-card-image-wrapper">
                                {recipe.coverImage ? (
                                    <img 
                                        src={recipe.coverImage} 
                                        alt={recipe.title}
                                        class="recipe-card-image"
                                        loading="lazy"
                                    />
                                ) : (
                                    <div class="flex items-center justify-center h-full bg-brand-accent/30 text-brand-primary/50">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><path d="M3 14h18"/><path d="M4 14v4a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-4"/><path d="M12 2v20"/><path d="m16 9 4.3 4.3"/><path d="m8 9-4.3 4.3"/></svg>
                                    </div>
                                )}
                                <div class="absolute top-3 right-3">
                                    <span class="badge bg-white/90 backdrop-blur px-2 py-1 rounded-md text-xs font-bold shadow-sm text-brand-text">
                                        New
                                    </span>
                                </div>
                            </div>
                            
                            <div class="recipe-card-content">
                                <h3 class="font-serif text-xl font-bold mb-2 group-hover:text-brand-primary transition-colors line-clamp-1">
                                    {recipe.title}
                                </h3>
                                <p class="text-gray-600 text-sm line-clamp-2 mb-4 flex-1">
                                    {recipe.description || "A delicious recipe waiting to be discovered."}
                                </p>
                                
                                <div class="flex items-center justify-between pt-4 border-t border-gray-100 mt-auto">
                                    <div class="flex items-center gap-2 text-xs text-gray-500 font-medium">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                        {new Date(recipe.createdAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric' })}
                                    </div>
                                    <span class="text-xs font-bold text-brand-primary flex items-center gap-1">
                                        View Recipe &rarr;
                                    </span>
                                </div>
                            </div>
                        </a>
                    </article>
                ))}
            </div>

            {allRecipes.length === 0 && (
                <div class="flex flex-col items-center justify-center py-20 px-4 text-center border-2 border-dashed border-gray-200 rounded-2xl bg-white/50">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4 text-gray-400">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                    </div>
                    <h3 class="text-xl font-bold mb-2">No recipes found</h3>
                    <p class="text-gray-500 max-w-sm mb-6">
                        We couldn't find anything matching "{search}". Try searching for ingredients like "chicken" or "pasta".
                    </p>
                    <a href="/" class="btn-outline">
                        Clear Search
                    </a>
                </div>
            )}
        </section>
    </main>
    
    <Footer />
</Layout>
