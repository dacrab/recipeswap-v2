---
import Layout from '../../layouts/Layout.astro';
import RecipeEditor from '../../components/RecipeEditor';

// Protected by middleware
---

<Layout>
    <main class="min-h-screen bg-brand-bg">
        <header class="fixed top-0 left-0 right-0 z-50 glass border-b border-black/5">
            <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
                <a href="/" class="text-2xl font-serif italic tracking-tighter text-brand-text">RecipeSwap</a>
                <a href="/admin" class="text-xs font-bold uppercase tracking-widest text-slate-400 hover:text-brand-text transition-colors">Studio Dashboard</a>
            </div>
        </header>

        <div class="pt-20">
            <RecipeEditor client:load />
        </div>
    </main>
</Layout>
